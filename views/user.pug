doctype html 
html(lang='en')
  head
    title Site Badges
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Create badges to display user stats')
    link(rel='stylesheet', href='/css/style.css')

    script(type="text/javascript" src='/js/particles.min.js' defer)
    script(type="text/javascript" src='/js/app.js' defer)

  body
    include partials/nav.pug
    #content
      #particles-js
      main.center.spread
        h1 User Badge Creation
        p Create badges to display user stats!
        form(action='/user', method='post')
          .input
            label(for='site') User name
            input(type='text', id='user', name='user', placeholder='ategon' required)
          .input
            label(for='site') Site domain
            input(type='text', id='site', name='site', placeholder='programming.dev' required)
          button(type='submit') Submit